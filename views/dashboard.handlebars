<div class="row text-center">
    <div class="col-auto">
        <h2>Are you ready to get schwifty, {{user_name}}?</h2>
    </div>
</div>

<div class="text-center">
    <div class="col-md-12">
        <h4>
            <a href="/dashboard/new">Create a New Article</a>
        </h4>
    </div>
</div>
<div class="col-md-12">
    <h3>Current Articles:</h3>
<div class="row">
    {{#each userDashboard}}
        <div class="col-sm-6">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title"><a href="/articles/{{this.id}}">{{this.title}}</a></h5>
                    <p class="card-text">{{this.content}}</p>
                    <a href="/dashboard/edit/{{this.id}}" type="button" class="btn btn-sm btn-warning float-right">Edit</a>
                </div>
            </div>
        </div>
    {{/each}}
</div>
</div>
